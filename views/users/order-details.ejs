<body style="background-image: -webkit-linear-gradient(left, #32be8f, #fff)">

  <style>

#nav-bar
{
   position: sticky;
   top: 0;
   z-index: 10;
   background: #00203fff;
}
.navbar-brand img
{
   height: 50px;
   padding-left: 30px;
}
.navbar-nav li
{
   padding: 0 10px;
}
.navbar-nav li a
{
   float: right;
   text-align: left;
}
#nav-bar ul li a:hover
{
   color: #007bff!important;
}

.navbar-toggler
{
   border: none!important;
}
.nav-link
{
   color: #555!important;
   font-weight: 600;
   font-size: 16px;
}

a:link, a:visited {
  text-decoration: none;
  display: inline-block;
}




#button{
    width: 200px;
    padding: 15px 0;
    text-align: center;
    margin: 0 40px;
    border-radius: 25px;
    font-weight: bold;
    border: 2px solid #32be8f;
    background-image: linear-gradient(to right, #32be8f, #38d39f, #32be8f);
    color: #fff;
    cursor: pointer;
    transition: background 0.5s;
    position: relative;
    left: 450px;
    top: 50px;
}
#button:hover{
    background: transparent;
    border: 2px solid #fff;
}


#contact
{
    background: -webkit-linear-gradient(left, #32be8f, #fff)
    padding-top: 40px;
    padding-bottom: 40px;
    color: black;
    border-radius: 25px;
}
.contact-form
{
    padding: 15px;
}
.form-control
{
    border-radius: 0 !important;
    border: none !important;
}
::placeholder
{
    color: #999 !important;
}
.follow
{
  background: #fff;
    padding: 10px;
    margin: 15px;
    border-radius: 25px;
    position: relative;
    left: 250px;
}
.contact-info .fa
{
    margin: 10px;
    color: #007bff;
    font-weight: bold;
}

</style>

<section id="nav-bar">
    <nav class="navbar navbar-expand-lg navbar-light">
     <a class="navbar-brand" href="../../#"><img src="../../../img/logo2.png"></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>
     
   </nav>   
   </section>

   <section id="contact">
    <div class="container">
       <!-- <h1>Get In Touch</h1> -->
       <div class="row">
       
       <div class="col-md-6 contact-info">
           <div class="follow"><b>User ID:</b>  <%= name %></div>
           <div class="follow"><b>Order ID:</b>  <%= order %></div>
           <div class="follow"><b>From:</b>  <%= from %></div>
           <div class="follow"><b>To:</b>  <%= to %></div>
           <div class="follow"><b>Distance:</b>  <%= distance %></div>
           
           
       </div>
       </div>
    </div>
    <a  href="payment"> <button id="button">Confirm Order</button> </a>
